;==========================================================
;======================== COLORS
;==========================================================
[colors]
; background = ${xrdb:background}
background = #00000000
foreground = ${xrdb:foreground}

; Light bg
primary = ${xrdb:color4}
; Dark bg
secondary = ${xrdb:color8}
; Really dark bg/fg
tertiary = ${xrdb:color0}
; Red
urgency = ${xrdb:color1}

;==========================================================
;======================== BASE BARS
;==========================================================
