[module/spotify]
type = custom/script
exec = python ~/.config/polybar/spotify.py
exec-if = pgrep -x spotify
interval = 2

format = <label>
format-background = ${colors.primary}
format-foreground = ${colors.tertiary}
format-padding = 1
label = %output%
label-font = 2

[module/spotify-off]
type = custom/script
exec = echo a
exec-if = [[ ! $(pgrep -x spotify) ]]

format = <label>
format-background = ${colors.primary}
format-foreground = ${colors.tertiary}
format-padding = 1
label =  Spotify
label-font = 2

; doesn't work
click-left = "spotify &"

