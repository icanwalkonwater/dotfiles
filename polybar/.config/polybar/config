;================== TOP LEFT MODULES
;==========================================================
[module/arch-icon]
type = custom/script
exec = uname -r | cut -d- -f1
interval = 999999999

format =  <label>
format-background = ${colors.primary}
format-foreground = ${colors.tertiary}
format-padding = 1
label = %output%
label-font = 2

[module/i3]
type = internal/i3
pin-workspaces = false
strip-wsnumbers = true
format = <label-state> <label-mode>
format-background = ${colors.tertiary}

ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;ﭮ
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-7 = 8;
ws-icon-8 = 9;
ws-icon-9 = 10;

label-mode = %mode%
label-visible = %icon%
label-focused = %index% %icon%
label-unfocused = %icon%
label-urgent = %index% %icon%
label-mode-padding = 1
label-visible-padding = 1
label-focused-padding = 1
label-unfocused-padding = 1
label-urgent-padding = 1

label-separator = 

label-focused-font = 2
label-focused-foreground = ${colors.primary}
label-urgent-foreground = ${colors.urgency}

[module/title]
type = internal/xwindow
format = <label>
label = %title%
label-empty =
label-maxlen = 70

;==========================================================
;================== TOP RIGHT MODULES
;==========================================================
[module/pulseaudio]
type = internal/pulseaudio
sink = alsa_output.pci-0000_00_1f.3.analog-stereo
use-ui-max = true
interval = 5

format-volume = 墳 VOL <label-volume>
format-volume-padding = 1
format-volume-background = ${colors.tertiary}
label-volume = %percentage%%

format-muted = <label-muted>
format-muted-padding = 1
format-muted-background = ${colors.tertiary}
format-muted-prefix = "婢 "
format-muted-prefix-foreground = ${colors.urgency}
label-muted = VOL Muted

[module/update]
type = custom/script
exec = ~/.config/polybar/arch-update.sh --display
; exec-if = wget -q --spider http://google.com
exec-if = ping -q -c1 -l1 8.8.8.8 >/dev/null
; 10 minutes
interval = 600

format =  <label>
format-padding = 1
format-background = ${colors.secondary}
format-foreground = ${colors.tertiary}
; Trigger update
click-right = ~/.config/polybar/arch-update.sh --update

[module/battery]
type = internal/battery
full-at = 100
battery = BAT0
adapter = AC0

format-full =  <label-full>
format-full-padding = 1
label-full-background = ${colors.tertiary}
label-full = 100%

format-charging = <animation-charging> <label-charging>
format-charging-padding = 1
format-charging-background = ${colors.tertiary}
format-charging-prefix = " "
format-charging-prefix-foreground = ${xrdb:color11}
label-charging = %percentage%% +%consumption%W
animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-framerate = 750

format-discharging = <ramp-capacity> <label-discharging>
format-discharging-padding = 1
format-discharging-background = ${colors.tertiary}
label-discharging = %percentage%% -%consumption%W
ramp-capacity-0 = 
ramp-capacity-0-foreground = ${colors.urgency}
ramp-capacity-1 = 
ramp-capacity-1-foreground = ${colors.urgency}
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

[module/date]
type = internal/date
interval = 1.0
format =  <label>
format-background = ${colors.primary}
format-foreground = ${colors.tertiary}
format-padding = 1
label = %date%%time%
label-font = 2

time = %H:%M:%S
time-alt =
date =
date-alt = %d/%m/%Y

